	<style>
      body {
        margin: 0;
        padding: 0;
      }

      #map {
        position: absolute;
        top: 550;
        bottom: 0;
        width: 100%;
      }
		
		.marker {
		  background-image: url('/images/marker.png');
		  background-size: cover;
		  width: 50px;
		  height: 50px;
		  border-radius: 50%;
		  cursor: pointer;
		}
		
		.mapboxgl-popup {
		  max-width: 200px;
		}

		.mapboxgl-popup-content {
		  text-align: center;
		  font-family: 'Open Sans', sans-serif;
		}
		

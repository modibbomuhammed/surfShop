
<h1>
  Edit Posts Page
</h1>


<form action="/posts/<%= foundPost._id %>?_method=PUT" method="POST">
  <input type="text" name="title" value='<%= foundPost.title %>' >
    <input type="text" name="price" value='<%= foundPost.price %>'>
